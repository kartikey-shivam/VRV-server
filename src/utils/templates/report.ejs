<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Transaction Report</title>
    <style>
      /* General Styles */
      body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
      }
      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
      }
      h1,
      h4 {
        text-align: center;
        color: #333;
      }
      h1 {
        font-size: 28px;
        margin-bottom: 20px;
      }
      h4 {
        font-size: 22px;
        margin-bottom: 10px;
      }
      .section {
        background-color: #fff;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        padding: 12px;
        margin-bottom: 20px;
      }
      .section p,
      .section li {
        font-size: 16px;
        color: #555;
      }
      .section p {
        margin: 5px 0;
      }
      ul {
        list-style: none;
        padding: 0;
        margin: 0;
      }
      li {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 0;
        border-bottom: 1px solid #eee;
      }
      li:last-child {
        border-bottom: none;
      }
      .badge {
        padding: 5px 10px;
        border-radius: 12px;
        color: #fff;
        font-size: 12px;
        text-align: center;
      }
      .badge.blue {
        background-color: #007bff;
      }
      .badge.green {
        background-color: #28a745;
      }
      .badge.teal {
        background-color: #20c997;
      }
      .footer {
        text-align: center;
        font-size: 14px;
        color: #888;
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Transaction Report</h1>

      <!-- Summary Section -->
      <div class="section">
        <h4>Summary</h4>
        <p><strong>Total Transactions = </strong> <%= totalTransactions %></p>
        <p><strong>Total Active Users = </strong> <%= totalActiveUsers %></p>
        <p><strong>Average Amount Sent = </strong> <%= averageAmountSent %></p>
      </div>

      <!-- Transactions by Type Section -->
      <div class="section">
        <h4>Transactions by Type</h4>
        <ul>
          <% for (let type in transactionsByType) { %>
          <li>
            <span><%= type %> = </span>
            <span><%= transactionsByType[type] %></span>
          </li>
          <% } %>
        </ul>
      </div>

      <!-- Most Common Tags Section -->
      <div class="section">
        <h4>Most Common Tags</h4>
        <ul>
          <% mostCommonTags.forEach(tag => { %>
          <li>
            <span><%= tag.tag %> = </span>
            <span><%= tag.count %></span>
          </li>
          <% }) %>
        </ul>
      </div>

      <!-- Devices Used Section -->
      <div class="section">
        <h4>Devices Used</h4>
        <ul>
          <% for (let device in devicesUsed) { %>
          <li>
            <span><%= device %> = </span>
            <span><%= devicesUsed[device] %></span>
          </li>
          <% } %>
        </ul>
      </div>

      <!-- Timestamp Section -->
      <div class="footer">
        <p>Report Generated on = <%= new Date(timestamp).toLocaleString() %></p>
      </div>
    </div>
  </body>
</html>
